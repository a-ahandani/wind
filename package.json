{
  "name": "@lit/lit-starter-ts",
  "private": true,
  "version": "2.0.0",
  "description": "A simple web component",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc --outDir public/dist",
    "build:minify": "rollup -c --file public/index.bundled.js --watch",
    "build:watch": "npm run clean && tsc --outDir public/dist --watch",
    "clean": "rimraf public/dist",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "docs:clean": "rimraf docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file docs/index.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "wds --root-dir=docs --node-resolve --watch",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --root-dir=public --watch",
    "serve:prod": "MODE=prod npm run serve",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "dev": "concurrently \"npm run serve\" \"tailwindcss -i ./src/tailwind/tailwindlib.css -o ./src/tailwind/tailwind.css --watch\" \"twlit --output ./src/tailwind/index.ts --input ./src/tailwind/tailwind.css\" \"npm run build:watch\" \"npm run build:minify\" "
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@types/mocha": "^10.0.6",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@open-wc/testing": "^3.1.5",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@web/dev-server": "^0.4.1",
    "@web/dev-server-legacy": "^2.1.0",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "lit-analyzer": "^2.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^2.73.0",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.4.1",
    "twlit": "^0.0.1-alpha.37",
    "typescript": "~5.3.3"
  },
  "customElements": "custom-elements.json"
}
